<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>SignalRChat</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="navbar">
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Home" asp-action="Find">Find</a>
        <a asp-controller="Home" asp-action="Private">Private</a>

        <div class="nav-right">
            Welcome @User.Identity.Name 
            &nbsp;|&nbsp;
            <a asp-controller="Account" asp-action="Logout">Logout</a>
        </div>
    </div>
    <div class="main">
        @if(User.Identity.IsAuthenticated){
            <vc:Room></vc:Room>
        }
        
        <div class="chat">
            @RenderBody()
        </div>
    </div>

    <div class="modal" id="create-room-modal">
        <form asp-controller="Home" asp-action="CreateRoom" class="modal-body">
            <a class="close" onclick="closeModal()">X</a>
            <header>Create Room</header>
            <div>
                <input name="Name">
            </div>
            <footer>
                <button>Create</button>
            </footer>
        </form>
    </div>

    <script src="~/js/site.js"></script>
    @RenderSection("Scripts",false)
</body>
</html>